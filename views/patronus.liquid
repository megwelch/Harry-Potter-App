{% block content %}
    <div class="card mb-4 shadow">
        <div class="card-body">
            <p>{{ patronus.creature }}</p>
            <div class="d-flex justify-content-between">
                <small>author: {{ patronus.author.username }}</small>
                {% if patronus.author == userId %}
                    <form action="/comments/delete/{{fruit.id}}/{{comment.id}}?_method=DELETE" method="POST">
                        <input class="btn btn-danger" type="submit" value="X">
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}